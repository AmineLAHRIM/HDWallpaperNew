<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawer">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@font/aclonica</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/aclonica</item>
    </style>

    <style name="Left_TextView">
        <item name="fontFamily">@font/autour_one</item>
    </style>
    <style name="Right_TextView">
        <item name="fontFamily">@font/arya</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/black_30</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    <style name="RatingBar1" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    <style name="RatingBar_Wall" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black_30</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    <color name="black_30">#30000000</color>
</resources>
